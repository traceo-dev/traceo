{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable"],
    "isolatedModules": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "rootDirs": ["./src", "../../../shared"]
  },
  "exclude": ["node_modules", "dist"]
}
