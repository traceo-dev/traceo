{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      // "@common/*": ["./src/common/*"],
      // "@db/*": ["./src/db/*"]
    }
  },
  "include": ["./src"]
}
